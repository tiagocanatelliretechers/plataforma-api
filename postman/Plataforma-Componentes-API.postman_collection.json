            "url": {
              "raw": "{{baseUrl}}/ui/dashboard",
              "host": ["{{baseUrl}}"],
              "path": ["ui", "dashboard"]
            },
            "description": "Monta a tela de Dashboard da plataforma com cards, gráfico, eventos e integrações"
