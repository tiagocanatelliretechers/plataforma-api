{
  "info": {
    "_postman_id": "plataforma-componentes-api-v2",
    "name": "Plataforma de Componentes API v1.1",
    "description": "API focada em:\n- Autenticação (login)\n- Layout da área logada (menu, usuário logado, branding)\n- Dashboard (tela única, front burro)\n- Gestão de usuários (CRUD + telas)\n- Lista de componentes (tela única)\n- Wizard de criação de componentes (tela única, steps)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Autenticação",
      "item": [
        {
          "name": "Gerar Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.tokenAcesso) {",
                  "    pm.collectionVariables.set('token', jsonData.tokenAcesso);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"login\": \"joao.silva\",\n  \"senha\": \"Senha@Forte123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/autenticacao/token",
              "host": ["{{baseUrl}}"],
              "path": ["autenticacao", "token"]
            },
            "description": "Gera token de autenticação"
          }
        }
      ]
    },
    {
      "name": "UI - Layout",
      "item": [
        {
          "name": "Obter Layout da Área Logada",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/ui/layout",
              "host": ["{{baseUrl}}"],
              "path": ["ui", "layout"]
            },
            "description": "Retorna o contexto da área logada (app, usuário, menu)"
          }
        }
      ]
    },
    {
      "name": "UI - Dashboard",
      "item": [
        {
          "name": "Obter Dados do Dashboard",
